.container{
    width: 100%;
    background-color: #F2f2f2;
}
.comment-list{
    width: 100%;
}
.comment-list .a-order{
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}
.comment-list .a-order .order-date{
    padding: 0 30rpx;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    font-size:26rpx;
    color:#000000;
    align-items: center;
}
.comment-list .a-order .order-date .red{
    font-size:26rpx;
    color:#e64340;
}
.a-order  .goods-info{
    width: 720rpx;
    margin-left: 30rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    padding: 30rpx 0;
    display: flex;
    align-items: center;
}


.goods-info  .goods-des{
    width: 540rpx;
    height: auto;
    line-height: 39rpx;
    font-size:26rpx;
    color:#000000;
    /* overflow: ; */
}


.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:26rpx;
  color:#f70404;
  padding: 30rpx;
}
.goods-text{
  padding: 0 10rpx;
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
  white-space:pre-wrap;
}